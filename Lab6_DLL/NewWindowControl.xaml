<UserControl x:Class="Lab6_DLL.NewWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab6_DLL"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Button x:Name="CloseButton" Content="Закрыть" HorizontalAlignment="Center" Margin="0,345,0,0" VerticalAlignment="Top" Height="68" Width="208" FontSize="18" Click="CloseButton_Click"/>
        <Label Content="Аргумент функции:" HorizontalAlignment="Left" Margin="201,62,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="InputBox" HorizontalAlignment="Left" Margin="201,114,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="264" FontSize="18" KeyDown="InputBox_KeyDown"/>
        <Label Content="Результат:" HorizontalAlignment="Left" Margin="201,170,0,0" VerticalAlignment="Top" FontSize="18" Width="92"/>
        <TextBox x:Name="OutputBox" HorizontalAlignment="Left" Margin="201,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="264" FontSize="18"/>

    </Grid>
</UserControl>
